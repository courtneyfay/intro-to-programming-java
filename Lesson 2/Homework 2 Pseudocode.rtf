Constant Real riseRate = 9.0 / 5.0\
Constant Real startNumber = 32.0\
Constant String CELSIUS_TEMP_PROMPT = \'93Please input the temperature in Celsius that you would like to be converted to Fahrenheit: \'94\
Constant String FAHRENHEIT_TEMP_LABEL = \'93Temperature in Fahrenheit: \'94\
